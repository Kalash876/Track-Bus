<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="0D4CAB">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#0D4CAB"
      android:paddingVertical="5dp"
      android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SmartBus"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/arrow_small_left"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:tint="@color/white" />

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#0D4CAB"
      android:layout_marginTop="40dp"
      android:paddingHorizontal="16dp"
      android:paddingTop="-120dp"
      >

    <RelativeLayout
        android:id="@+id/profilesec"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp">

      <ImageView
          android:id="@+id/profileImage"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:src="@drawable/user"
          android:background="@drawable/circle_bg"
          android:scaleType="centerCrop"
          android:padding="6dp" />

      <ImageView
          android:id="@+id/cameraIcon"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/camera__2_"
          android:background="@drawable/camera_bg"
          android:scaleType="centerInside"
          android:clickable="true"
          android:layout_alignBottom="@id/profileImage"
          android:layout_alignEnd="@id/profileImage"
          android:layout_marginBottom="4dp"
          android:layout_marginEnd="4dp"
          android:elevation="4dp"
          android:padding="4dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rahul Sharma"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profilesec"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/driverName"
        android:layout_alignStart="@id/driverName"
        android:layout_marginTop="4dp">

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/phone"
          android:layout_marginEnd="6dp"
          app:tint="@android:color/white" />

      <TextView
          android:id="@+id/phoneNumber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="+91 9876543210"
          android:textColor="@android:color/white"
          android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/roleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/phoneLayout"
        android:layout_alignStart="@id/phoneLayout"
        android:layout_marginTop="4dp">

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/driver_man"
          android:layout_marginEnd="6dp"
          app:tint="@android:color/white" />

      <TextView
          android:id="@+id/role"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Role: Driver"
          android:textColor="@android:color/white"
          android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/busLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/roleLayout"
        android:layout_alignStart="@id/roleLayout"
        android:layout_marginTop="4dp">

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/bus"
          android:layout_marginEnd="6dp"
          app:tint="@android:color/white" />

      <TextView
          android:id="@+id/busNumber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Bus: UP 78 AB 1234"
          android:textColor="@android:color/white"
          android:textSize="18sp" />
    </LinearLayout>

  </RelativeLayout>


  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="250dp"
      app:cardCornerRadius="30dp"
      app:cardElevation="8dp"
      android:backgroundTint="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingBottom="32dp"
          android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user_pen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Edit Profile"
                android:textSize="16sp"
                android:textColor="#000000" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Settings"
                android:textSize="16sp"
                android:textColor="#000000" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/direction_signal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Route"
                android:textSize="16sp"
                android:textColor="#000000" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Contact Admin"
                android:textSize="16sp"
                android:textColor="#000000" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="30dp"
            app:cardElevation="4dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textColor="#D32F2F"
                android:textStyle="bold" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>
    </ScrollView>
  </androidx.cardview.widget.CardView>
</FrameLayout>
