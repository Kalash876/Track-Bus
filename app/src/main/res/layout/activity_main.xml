<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_bg"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="386dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="SmartBus"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select your role to continue"
        android:textSize="14sp"
        android:textColor="#EEEEEE"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SmartBus - College Bus Tracking\n  Attendance System"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Admin Login Button -->
    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:drawableStart="@drawable/ic_admin"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:padding="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"/>

    <!-- Driver Login Button -->
    <Button
        android:id="@+id/btnDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Driver Login"
        android:drawableStart="@drawable/ic_driver"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:padding="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Student Login Button -->
    <Button
        android:id="@+id/btnStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student Login"
        android:drawableStart="@drawable/ic_student"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:padding="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnDriver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
